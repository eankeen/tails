{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "target": "ES2019",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"]
  },
  "exclude": ["dist", "**/*.spec.ts"]
}
