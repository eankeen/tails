{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2017",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "types": ["jest", "node", "jest-extended"]
  },
  "exclude": ["dist", "**/*.spec.ts"]
}
